# Admin Panel Environment Variables

# Application
SERVICE_NAME=admin-panel
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8090

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=sentilyze
DB_PASSWORD=sentilyze123
DB_NAME=sentilyze_predictions

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
ADMIN_API_KEY=your-admin-api-key-for-direct-access
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8090
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Google Cloud Platform
GCP_PROJECT_ID=sentilyze-v5-clean
BIGQUERY_DATASET=sentilyze_dataset
BIGQUERY_EMULATOR_HOST=bigquery-emulator:9050

# Service URLs (for health checks)
API_GATEWAY_URL=http://api-gateway:8080
INGESTION_URL=http://ingestion:8081
SENTIMENT_PROCESSOR_URL=http://sentiment-processor:8082
MARKET_CONTEXT_URL=http://market-context-processor:8083
PREDICTION_ENGINE_URL=http://prediction-engine:8084
ALERT_SERVICE_URL=http://alert-service:8085
ANALYTICS_ENGINE_URL=http://analytics-engine:8086
TRACKER_SERVICE_URL=http://tracker-service:8087

# Feature Flags
ENABLE_USER_MANAGEMENT=true
ENABLE_SERVICE_CONTROL=true
ENABLE_ANALYTICS_DASHBOARD=true
