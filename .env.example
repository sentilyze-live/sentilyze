# Sentilyze Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Core Configuration
# ============================================
ENVIRONMENT=development
GCP_PROJECT_ID=sentilyze-v5-clean
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# ============================================
# Feature Flags - Enable/Disable Markets
# ============================================
# Set to 'true' or 'false' to enable/disable markets
ENABLE_CRYPTO_MARKET=true
ENABLE_GOLD_MARKET=true

# Prediction Engine Feature Flags
ENABLE_CRYPTO_PREDICTIONS=true
ENABLE_GOLD_PREDICTIONS=true

# Infrastructure Feature Flags
ENABLE_FIRESTORE=true
ENABLE_POSTGRES=true

# ============================================
# Firestore Configuration (Google-native cache)
# ============================================
# Local Development (Emulator)
FIRESTORE_EMULATOR_HOST=localhost:8080

# Production (Native Firestore)
FIRESTORE_PROJECT_ID=${GCP_PROJECT_ID}
FIRESTORE_DATABASE=(default)

# ============================================
# PostgreSQL Configuration
# ============================================
# Local Development
DB_HOST=localhost
DB_PORT=5432
DB_USER=sentilyze
DB_PASSWORD=sentilyze123
DB_NAME=sentilyze_predictions

# Production (via Secret Manager)
DB_CONNECTION_NAME=

# ============================================
# BigQuery Configuration (single unified dataset)
# ============================================
BIGQUERY_DATASET=sentilyze_dataset
BIGQUERY_LOCATION=US

# Emulator (Local Development)
BIGQUERY_EMULATOR_HOST=localhost:9050

# ============================================
# Pub/Sub Configuration
# ============================================
PUBSUB_PROJECT_ID=sentilyze-v5-clean
PUBSUB_TOPIC_RAW_DATA=raw-market-data
PUBSUB_TOPIC_PROCESSED_SENTIMENT=processed-sentiment
PUBSUB_TOPIC_MARKET_CONTEXT=market-context
PUBSUB_TOPIC_PREDICTIONS=predictions
PUBSUB_TOPIC_ALERTS=alerts
PUBSUB_TOPIC_ANALYTICS_EVENTS=analytics-events

# Subscriptions
PUBSUB_SUBSCRIPTION_RAW_DATA=raw-data-subscription
PUBSUB_SUBSCRIPTION_PROCESSED_SENTIMENT=processed-sentiment-subscription
PUBSUB_SUBSCRIPTION_MARKET_CONTEXT=market-context-subscription
PUBSUB_SUBSCRIPTION_PREDICTIONS_ALERTS=predictions-subscription-alerts
PUBSUB_SUBSCRIPTION_PREDICTIONS_TRACKER=predictions-subscription-tracker
PUBSUB_SUBSCRIPTION_ANALYTICS_EVENTS=analytics-events-subscription

# Emulator (Local Development)
PUBSUB_EMULATOR_HOST=localhost:8085

# ============================================
# Service URLs (Local Development)
# ============================================
API_GATEWAY_URL=http://localhost:8080
INGESTION_SERVICE_URL=http://localhost:8081
SENTIMENT_PROCESSOR_URL=http://localhost:8082
MARKET_CONTEXT_PROCESSOR_URL=http://localhost:8083
PREDICTION_ENGINE_URL=http://localhost:8084
ALERT_SERVICE_URL=http://localhost:8085
ANALYTICS_ENGINE_URL=http://localhost:8086
TRACKER_SERVICE_URL=http://localhost:8087

# ============================================
# API Keys - Crypto Market Data
# ============================================
# CoinMarketCap (Required for crypto data)
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Alternative Crypto Data Sources
COINAPI_KEY=your-coinapi-key
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key

# ============================================
# API Keys - Gold Market Data
# ============================================
# Gold API (Required for gold data)
GOLD_API_KEY=your-gold-api-key

# Alternative Gold/Precious Metals Sources
METALS_API_KEY=your-metals-api-key
WORLD_GOLD_COUNCIL_API_KEY=your-wgc-api-key

# ============================================
# API Keys - Social Media / Sentiment Data
# ============================================
# Twitter/X API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_USER_AGENT=Sentilyze/1.0

# News API
NEWS_API_KEY=your-newsapi-key

# Alternative News Sources
BLOOMBERG_API_KEY=your-bloomberg-key
REUTERS_API_KEY=your-reuters-key

# ============================================
# ML/AI Service API Keys
# ============================================
# Hugging Face (For sentiment analysis models)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL=sentiment-analysis

# OpenAI (For advanced sentiment analysis - optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Google AI Platform
GOOGLE_AI_API_KEY=your-google-ai-key

# ============================================
# Alert Configuration
# ============================================
# Email Alerts
ENABLE_EMAIL_ALERTS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL_FROM=alerts@sentilyze.com
ALERT_EMAIL_TO=recipient@example.com

# Slack Alerts
ENABLE_SLACK_ALERTS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#sentilyze-alerts

# Discord Alerts
ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
DISCORD_CHANNEL=#sentilyze-alerts

# ============================================
# Analytics Configuration
# ============================================
ANALYTICS_CACHE_TTL=300
ANALYTICS_DEFAULT_TIMEFRAME=24h

# ============================================
# ML Model Configuration
# ============================================
ML_MODEL_PATH=./models
MODEL_RETRAIN_INTERVAL=86400
PREDICTION_HORIZON_HOURS=24

# ============================================
# Ingestion Configuration
# ============================================
# Crypto Ingestion
CRYPTO_UPDATE_INTERVAL=300
CRYPTO_ASSETS=BTC,ETH,ADA,DOT,LINK,BNB,SOL,AVAX,MATIC,ATOM

# Gold Ingestion
GOLD_UPDATE_INTERVAL=900
GOLD_ASSETS=XAU,XAG,XPT,XPD
GOLD_CURRENCY=USD

# Social Media Ingestion
TWITTER_SEARCH_TERMS=bitcoin,crypto,gold,goldprice,ethereum,altcoins
REDDIT_SUBREDDITS=cryptocurrency,Bitcoin,Gold,GoldPrice,wallstreetbets
NEWS_QUERY_TERMS=cryptocurrency gold market sentiment investment

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_TRACING=true
ENABLE_METRICS=true

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
API_RATE_LIMIT=1000
ENABLE_AUTH=true

# ============================================
# Admin Panel Configuration
# ============================================
# Service Configuration
ADMIN_PANEL_PORT=8090
ADMIN_PANEL_HOST=0.0.0.0

# JWT Configuration (Admin Panel specific)
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8090

# Feature Flags
ENABLE_USER_MANAGEMENT=true
ENABLE_SERVICE_MONITORING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_LOG_VIEWER=true
ENABLE_CONFIG_MANAGEMENT=true

# Security Settings
RATE_LIMIT_PER_MINUTE=100
SESSION_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_SESSIONS=5
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=false

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# Default Admin User (Change in production!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@sentilyze.live

# UI Configuration (Next.js Frontend)
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_WS_URL=ws://localhost:8090
NEXT_PUBLIC_APP_NAME=Sentilyze Admin Panel
NEXT_PUBLIC_APP_VERSION=1.0.0

# Development / Testing
# ============================================
DEBUG=false
TESTING=false
MOCK_EXTERNAL_APIS=false
